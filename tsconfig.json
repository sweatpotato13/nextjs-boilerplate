{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./src/1-shared/*"
      ],
      "@entities/*": [
        "./src/2-entities/*"
      ],
      "@features/*": [
        "./src/3-features/*"
      ],
      "@widgets/*": [
        "./src/4-widgets/*"
      ],
      "@pages/*": [
        "./src/5-pages/*"
      ],
      "@app/*": [
        "./src/6-app/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}